
@using PollsApp.Mvc.ViewModels

@model PollsViewModel

<div class="comments-container" id="comments-container">

    <partial name="_CommentsInput" />

    <div class="comments-list" id="comments-list">
        @foreach (var comment in Model.PollInfo.Poll.Comments)
        {
            string imgSrc = "https://i.pinimg.com/736x/0d/64/98/0d64989794b1a4c9d89bff571d3d5842.jpg";
            if (comment.User.Avatar != null)
            {
                imgSrc = "data:image/jpeg;base64," + Convert.ToBase64String(comment.User.Avatar);
            }
            <div class="comment">
                <img class="comment-avatar-img" src="@imgSrc" alt="img" />
                <p>@comment.User.Name</p>
                <p>@comment.Text</p>
            </div>

        }
    </div>
    
</div>