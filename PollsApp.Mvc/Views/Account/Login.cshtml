@using PollsApp.Application.DTOs

@model LoginModel
<div class="login-container-global">
    <div class="login-container">
        <h3> Вход на сайт </h3>

        <form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
            <div class="validation" asp-validation-summary="ModelOnly">  </div>
            <div>
                <div class="form-group form-line">
                    <label asp-for="Email">Email </label>
                    <input class="email-input" type="text" asp-for="Email">
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group form-line">
                    <label asp-for="Password">Пароль </label>
                    <input asp-for="Password">
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group form-line">

                    <input type="submit" value="Войти" class="btn btn-outline-dark btn-login" />

                </div>
            </div>

        </form>


        <a class="form-line" href="~/Account/Register">Зарегистрироваться</a>
    </div>
</div>

